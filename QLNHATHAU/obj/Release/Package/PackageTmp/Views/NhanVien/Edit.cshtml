<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="small mb-1">ID nhân viên</label>
                            @Html.EditorFor(model => model.IDNhanVien, new { htmlAttributes = new { @class = "form-control", placeholder = "ID nhân viên", @id = "IDNhanVien" } })
                            @Html.ValidationMessageFor(model => model.IDNhanVien, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="small mb-1">Mã nhân viên</label>
                            @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control", placeholder = "Mã nhân viên", @id = "MaNV" } })
                            @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="small mb-1">Tên nhân viên</label>
                            @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên nhân viên", @id = "TenNV" } })
                            @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="small mb-1">Tên nhân viên KD</label>
                            @Html.EditorFor(model => model.TenNVKD, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên nhân viên KD", @id = "TenNVKD" } })
                            @Html.ValidationMessageFor(model => model.TenNVKD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="small mb-1">Địa chỉ</label>
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", placeholder = "Địa chỉ", @id = "DiaChi" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="small mb-1">Số điện thoại</label>
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", placeholder = "Số điện thoại", @id = "SDT" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="small mb-1">Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", @id = "Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="small mb-1">Ngày vào làm</label>
                            @Html.TextBox("NgayVaoLam", null, new { @id="NgayVaoLam", @type="date", @class ="form-control", @Value=ViewBag.NgayVaoLam })
                            @Html.ValidationMessageFor(model => model.NgayVaolam, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="small mb-1">Ngày nghỉ việc</label>
                            @Html.TextBox("NgayNghiViec", null, new { @id = "NgayNghiViec", @type = "date", @class = "form-control", @Value = ViewBag.NgayNghiViec })
                            @Html.ValidationMessageFor(model => model.NgayNghiViec, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="small mb-1 margin-checkbox">Tình trạng làm việc</label>
                            @Html.CheckBoxFor(model => model.TinhTrangLV, new { htmlAttributes = new { @class = "form-control", placeholder = "Tình trạng làm việc", @id = "TinhTrangLV" } })
                            @Html.ValidationMessageFor(model => model.TinhTrangLV, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />
                        <input type="submit" value="Hủy" class="btn btn-danger button_cancel" data-dismiss="modal" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .button_submit {
        float: right;
        margin-bottom: 15px;
    }

    .button_cancel {
        float: right;
        margin-right: 15px
    }

    .margin-checkbox {
        margin-right: 30px;
    }
</style>
<script>

</script>