
@model QLNHATHAU.Models.CongValidation

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle">Cập Nhật Cổng</h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    @Html.HiddenFor(model => model.IDCong)
                    <div class="form-group">
                        <label class="small mb-1">Thêm Cổng</label>
                        @Html.EditorFor(model => model.TenCong, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Tên Cổng", @id = "TenCong" } })
                        @Html.ValidationMessageFor(model => model.TenCong, "", new { @class = "text-danger" })
                    </div>
                    <div class="btn-margin-top">
                        <input type="submit" value="Xác nhận" class="btn btn-primary pull-right" />

                    </div>
                </fieldset>
            </div>
        </div>
    </div>
}
