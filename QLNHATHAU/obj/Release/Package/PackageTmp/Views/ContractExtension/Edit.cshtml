
@model QLNHATHAU.Models.ContractExtensionValidation
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />
@using (Html.BeginForm("Edit", "ContractExtension", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IDGHHD)
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="small mb-1">Tên hợp đồng</label>
                            @Html.DropDownListFor(model => model.IDHD, ViewBag.HDList as SelectList, "--Chọn hợp đồng--", new { @id = "IDHD", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="small mb-1">Ngày kết thúc</label>
                            @Html.EditorFor(model => model.NgayKetThuc, new { @value = DateTime.Today, htmlAttributes = new { @class = "form-control", @type = "date", placeholder = "Ngày kết thúc", @id = "NgayKetThuc", @Value = ViewBag.NgayKetThuc } })
                            @Html.ValidationMessageFor(model => model.NgayKetThuc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="small mb-1">Lý do gia hạn</label>
                            @Html.TextAreaFor(model => model.LyDo, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên hợp đồng", @id = "LyDo" } })
                            @Html.ValidationMessageFor(model => model.TenHD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />
                        <input type="reset" value="Hủy" class="btn btn-danger button_cancel" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<style>
    .button_submit {
        float: right;
        margin-bottom: 15px;
    }

    .button_cancel {
        float: right;
        margin-right: 15px
    }

    .margin-checkbox {
        margin-right: 30px;
    }

    #LyDo {
        width: 100%;
    }
</style>
<script type="text/javascript">
    $("#IDHD").chosen({
        width: "100%"
    });
</script>

