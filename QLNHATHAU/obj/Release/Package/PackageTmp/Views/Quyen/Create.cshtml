@model QLNHATHAU.Models.QuyenValidation

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal"></a>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="small mb-1">Nhập Tên Quyền</label>
                            @Html.EditorFor(model => model.TenQuyen , new { htmlAttributes = new { @class = "form-control", placeholder = "Tên Quyền", @id = "TenQuyen" } })
                            @Html.ValidationMessageFor(model => model.TenQuyen, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="btn-margin-top">
                        <input type="submit" value="Xác nhận" class="btn btn-primary pull-right" />
                        
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
