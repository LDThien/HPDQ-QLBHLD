@model QLNHATHAU.Models.QuyenValidation

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset id="SubmitForm">
                    @Html.HiddenFor(model => model.IDQuyen)
                    <div class="form-row">
                        <label class="small mb-1">Thêm tên quyền</label>
                        @Html.EditorFor(model => model.TenQuyen, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Tên Quyền", @id = "TenQuyen" } })
                        @Html.ValidationMessageFor(model => model.TenQuyen, "", new { @class = "text-danger" })
                    </div>
                    <div class="btn-margin-top">
                        <input type="submit" value="Xác nhận" class="btn btn-primary pull-right" />
                        
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
}

<style>
    .button_submit {
        float: right;
    }

    .button_cancel {
        float: right;
        margin-right: 15px
    }

    .btn-margin-top {
        margin-top: 15px;
    }
</style>
