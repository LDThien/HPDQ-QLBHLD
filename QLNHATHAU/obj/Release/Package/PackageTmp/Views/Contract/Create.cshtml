@model QLNHATHAU.Models.HopDongValidation
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />
@using (Html.BeginForm("Create", "Contract", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="col-md-6">
                        <label class="small mb-1">Số hợp đồng</label>
                        @Html.EditorFor(model => model.SoHD, new { htmlAttributes = new { @class = "form-control", placeholder = "Số hợp đồng", @id = "SoHD" } })
                        @Html.ValidationMessageFor(model => model.SoHD, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="small mb-1">Người đại diện</label>
                        @Html.EditorFor(model => model.NguoiDaiDien, new { htmlAttributes = new { @class = "form-control", placeholder = "Người đại diện", @id = "SoHD" } })
                        @Html.ValidationMessageFor(model => model.NguoiDaiDien, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="small mb-1">Tên hợp đồng</label>
                    @Html.EditorFor(model => model.TenHD, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên hợp đồng", @id = "TenHD" } })
                    @Html.ValidationMessageFor(model => model.TenHD, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="small mb-1">Nhà Thầu</label>
                    @Html.DropDownListFor(model => model.NhaThauID, ViewBag.NTList as SelectList, new { @id = "NhaThauID", @class = "form-control" })
                </div>

                <div class="form-row">
                    <div class="col-md-6">
                        <label class="small mb-1">BP quản lý</label>
                        @Html.DropDownListFor(model => model.PhongBanID, ViewBag.PBList as SelectList, new { @id = "PhongBanID", @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="small mb-1">Phòng chức năng</label>
                            @Html.DropDownListFor(model => model.PBCHNID, ViewBag.PCHNList as SelectList, new { @id = "PBCHNID", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="small mb-1">Ngày bắt đầu</label>
                            @Html.EditorFor(model => model.NgayBD, new { @value = DateTime.Today, htmlAttributes = new { @class = "form-control", @type = "date", placeholder = "Ngày bắt đầu", @id = "NgayBD" } })
                            @Html.ValidationMessageFor(model => model.NgayBD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="small mb-1">Ngày kết thúc</label>
                            @Html.EditorFor(model => model.NgayKT, new { htmlAttributes = new { @class = "form-control", @type = "date", placeholder = "Ngày kết thúc", @id = "NgayKT" } })
                            @Html.ValidationMessageFor(model => model.NgayKT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="small mb-1">File đính kèm</label>
                    <input class="form-control" type="file" name="UploadFile" />
                </div>

                <div class="col-md-12">
                    <input type="submit" value="Thêm mới" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $("#PhongBanID").chosen({
        width: "100%"
    });
    $("#NhaThauID").chosen({
        width: "100%"
    });
    $("#PhongBanCN").chosen({
        width: "100%"
    });
</script>

