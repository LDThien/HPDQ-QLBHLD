@model QLNHATHAU.Models.NguoiDungValidation
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDNguoiDung)
            <div class="modal-body">

                <fieldset id="SubmitForm">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label class="small mb-1"> Tên Đăng Nhập </label>
                            @Html.TextBox("TenDangNhap", null, new { @class = "form-control", @readonly = "true" })
                            @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <label class="small mb-1"> Họ Và Tên </label>
                            @Html.DropDownListFor(model => model.NhanVienID, ViewBag.NVList as SelectList, "--Họ và Tên--", new { @id = "NhanVienID", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NhanVienID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <label class="small mb-1"> Quyền Đăng Nhập </label>
                            @Html.DropDownListFor(model => model.IDQuyen, ViewBag.QList as SelectList, "--Quyền đăng nhập--", new { @id = "IDQuyen", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IDQuyen, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    &nbsp;
                    <div class="btn-margin-top text-center">
                        <input type="submit" value="Xác nhận" class="btn btn-success button_submit" />
                        <input type="reset" value="Hủy" class="btn btn-danger button_cancel" data-dismiss="modal" />
                    </div>
                </fieldset>

            </div>


        </div>
    </div>
}
<style>
    .button_submit {
        float: right;
        margin-bottom: 15px;
    }

    .button_cancel {
        float: right;
        margin-right: 15px
    }

    .margin-checkbox {
        margin-right: 30px;
    }
</style>







