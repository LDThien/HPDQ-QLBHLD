@model QLNHATHAU.Models.ProtectionmarginValidation
<script src="~/Content/assets/Chonse/chosen.jquery.js"></script>
<link href="~/Content/assets/Chonse/chosen.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Create", "Protectionmargin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" id="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ModalTitle"></h5>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="small mb-1">Tên trang bị bảo hộ lao động theo vị trí</label>
                            @Html.EditorFor(model => model.TenVTBHLD, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên trang bị bảo hộ lao động theo vị trí", @id = "TenVTBHLD" } })
                            @Html.ValidationMessageFor(model => model.TenVTBHLD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-12">
                        <label class="small mb-1">Vị Trí Làm Việc</label>
                        @Html.DropDownListFor(model => model.VTLVID, ViewBag.VTList as SelectList, "--Vị Trí Làm Việc--", new { @id = "VTLVID", @class = "form-control" })
                    </div>
                </div>
                &nbsp;
                <div class="col-md-12" style="margin-left: 170px;">
                    <input type="submit" value="Thêm mới" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}
<style>
    .button_submit {
        float: right;
        margin-bottom: 15px;
    }

    .button_cancel {
        float: right;
        margin-right: 15px
    }

    .margin-checkbox {
        margin-right: 30px;
    }
</style>
<script type="text/javascript">
    $("#VTLVID").chosen({
        width: "100%"
    });
</script>
<script>
    $('#form').each(() => {
        $(this).data('serialized', $(this).serialize());

    }).on('change input', 'input', 'select', (e) => {
        var $form = $(this).closest("form");
        var state = $form.serialize() === $form.data('serialized');
        $('#btn-add').prop('disabled', state);
    }).find('#btn-add').prop('disabled', true);

</script>







